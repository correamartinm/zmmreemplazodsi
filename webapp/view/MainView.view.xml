							<f:header>
								<card:Header title="{i18n>lblalmacenamientoprd} " iconSrc="sap-icon://add-product" press="onGoOtEntrante"    />
							</f:header>
						</f:Card>


						<f:Card class="sapUiTinyMarginBottom">
							<f:header>
								<card:Header title="{i18n>btnsalidaventas} " iconSrc="sap-icon://sales-document" press="onGoOtSaliente" />
							</f:header>
						</f:Card>


						<f:Card class="sapUiTinyMarginBottom">
							<f:header>
								<card:Header title="{i18n>btntraslados} " iconSrc="sap-icon://share" press="onGoMovimiento" />
							</f:header>
						</f:Card>


						<f:Card >
							<f:header>
								<card:Header title="{i18n>btnremanejopallets} " iconSrc="sap-icon://redo" press="onGoRemanejo" />
