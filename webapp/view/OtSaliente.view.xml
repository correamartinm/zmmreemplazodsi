<mvc:View controllerName="morixe.zmmreemplazodsi.controller.OtSaliente"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:form="sap.ui.layout.form"
    xmlns:card="sap.f.cards"
    xmlns:f="sap.f"
    xmlns="sap.m">


    <Page title="{i18n>ttotsaliente}" id="OtSaliente" class="Title PanelSnow">
        <customHeader>
            <Bar class="custHeader" design="Header">
                <contentLeft>
                    <Button type="Emphasized" icon="sap-icon://nav-back" press="_onGotoMainMenu"/>
                   
                </contentLeft>
                <contentMiddle>
                    <ObjectIdentifier />
                </contentMiddle>
                <contentRight>

                    <Image src="./images/logo.png" height="36px"></Image>
                </contentRight>
            </Bar>
        </customHeader>
        <content>

            <OverflowToolbar >
                <ToolbarSpacer/>
                <Label text="{i18n>ttotsaliente}"/>
                <ToolbarSpacer/>
            </OverflowToolbar>



            <form:SimpleForm columnsM="2" columnsXL="4" adjustLabelSpan="true" labelSpanL="2" layout="ResponsiveGridLayout" editable="true" backgroundDesign="Transparent" class="sapUiTinyMarginTop">
                <form:content>
                    <Label text="{i18n>lblingreseot}" />
                    <Input id="idOtOutInput" submit="onInputOtScanSubmit" />
                </form:content>
            </form:SimpleForm>

            <form:SimpleForm columnsM="2" columnsXL="4" editable="true" backgroundDesign="Transparent" class="sapUiTinyMarginTop">
                <form:content>
                    <Label text="{i18n>lbletapa}" />
                    <Text text="{mockdata>/inOTAlmmacen}"/>

                    <ObjectStatus title="{i18n>lblorigen}" text="xxxxxxxxxxxxxxxxx" />
                    <Input submit="onInputScanSubmit" />


                    <Label text="{i18n>labelpallet}" />
                    <Input valueStateText="{i18n>msgdiferente}" name="inCodigo" id="idCodigoInput" submit="onInputScanSubmit" value="{mockdata>/inOTCodigo}" />


                    <ObjectStatus title="{i18n>lbldestino}" text="xxxxxxxxxxxxxxxxx" />
                    <Input submit="onInputScanSubmit" />





                    <!-- <Label text="{i18n>lblubicaciondestino}" />
                    <Text text="{mockdata>/inOTAlmmacen}"/> -->

                </form:content>
            </form:SimpleForm>



            <HBox class="sapUiLargeMarginTop sapUiTinyMarginEnd sapUiTinyMarginBegin" justifyContent="SpaceBetween">

                <f:Card  >
                    <f:header>
                        <card:Header title="{i18n>btnanterior} " iconSrc="sap-icon://navigation-left-arrow" press="onGoMovimiento" />
                    </f:header>

                </f:Card>

                <f:Card class="sapUiTinyMarginEnd">
                    <f:header>
                        <card:Header title="{i18n>btnsiguiente} " iconSrc="sap-icon://navigation-right-arrow" press="onGoMovimiento" />
                    </f:header>
                </f:Card>
            </HBox>


        </content>
        <footer>

            <OverflowToolbar  class="sapUiSmallMarginBottom">

                <Button text="{i18n>btncancelar}" type="Emphasized" width="30%" enabled="{mockdata>/inOTValidate}"/>
                <ToolbarSpacer/>
                <Button text="{i18n>btnlimpiar}" type="Emphasized" width="30%" enabled="{mockdata>/inOTValidate}"/>
                <ToolbarSpacer/>
                <Button text="{i18n>btncontinuar}" type="Emphasized" width="30%" enabled="{mockdata>/inOTValidate}"/>
            </OverflowToolbar>

        </footer>
    </Page>

</mvc:View>
