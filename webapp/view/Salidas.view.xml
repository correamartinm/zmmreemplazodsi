<mvc:View controllerName="morixe.zmmreemplazodsi.controller.Salidas"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:card="sap.f.cards"
    xmlns:f="sap.f"
    xmlns="sap.m">


    <Page title="{i18n>ttotsaliente}" id="OtSaliente" class="Title PanelSnow">
        <customHeader>
            <Bar class="custHeader" design="Header">
                <contentLeft>
                    <Button type="Emphasized" icon="sap-icon://nav-back" press="_onGotoMainMenu"/>

                </contentLeft>
                <contentMiddle>
                    <ObjectIdentifier />
                </contentMiddle>
                <contentRight>

                    <Image src="./images/logo.png" height="36px"></Image>
                </contentRight>
            </Bar>
        </customHeader>
        <content>

            <OverflowToolbar >
                <ToolbarSpacer/>
                <Label text="{i18n>btnsalidaventas}" />
                <ToolbarSpacer/>
            </OverflowToolbar>

            <HBox alignContent="Center" alignItems="Center" justifyContent="End" class="sapUiTinyMarginTop sapUiTinyMarginEnd">
                
                <Label text="{i18n>lblposicion}: " />
                    <Label text="1/X"  class="BigSize sapUiTinyMarginBegin"/>
            </HBox>

            <form:SimpleForm columnsM="2" columnsXL="4" labelSpanL="2" layout="ResponsiveGridLayout" editable="true" backgroundDesign="Transparent" >
                <!-- visible="{mockdata>/Picking}" -->
                <form:content>

                    <!-- <ObjectStatus title="{i18n>lblnumot}" text="Pos: 1/X" /> -->
                    <Label text="{i18n>lblingreseot}" />
                    <Input id="idOtOutInput" submit="onInputOtScanSubmit" />

                    <ObjectStatus title="{i18n>lbletapa}" text="XXX" />
                    <!-- <Label text="{i18n>lblingreseot}" />
                    <Text text="{mockdata>/inOTAlmmacen}"/> -->
                    <!-- <Input id="idOtOutInput" submit="onInputOtScanSubmit" /> -->
                    <!-- <ObjectStatus title="{i18n>lblnumot}" text="{mockdata>/Salida/Sotnumero}" /> -->

                    <!-- <Label text="{i18n>lbletapa}" />
                    <Text text="{mockdata>/inOTAlmmacen}"/> -->
                    <!-- <ObjectStatus title="{i18n>lbletapa}" text="{mockdata>/Salida/Setapa}" /> -->

                    <ObjectStatus title="{i18n>lblorigen}" text="XXXXXXXXXXXXXX" />
                    <!-- <ObjectStatus title="{i18n>lblorigen}" text="{mockdata>/Salida/Sorigen}" /> -->
                    <Input submit="onInputScanSubmit" value="{mockdata>/Salida/Svalorigen}"/>


                    <Label text="{i18n>labelpallet}" />
                    <Input valueStateText="{i18n>msgdiferente}" name="inCodigo" id="idCodigoInput" submit="onInputScanSubmit" value="{mockdata>/Salida/Svalpalletcodigo}" />


                    <ObjectStatus title="{i18n>lbldestino}" text="XXXXXXXXXXXXXXXXX" />
                    <!-- <Input submit="onInputScanSubmit" value="{mockdata>/Salida/Svaldestino}"/> -->





                    <!-- <Label text="{i18n>lblubicaciondestino}" />
                    <Text text="{mockdata>/inOTAlmmacen}"/> -->

                </form:content>
            </form:SimpleForm>



            <HBox class="sapUiLargeMarginTop" justifyContent="SpaceAround" alignContent="Center" alignItems="Center">
                <!-- class="sapUiLargeMarginTop sapUiTinyMarginEnd sapUiTinyMarginBegin"  -->
                <!-- <f:Card  >
                    <f:header>
                        <card:Header iconSrc="sap-icon://navigation-left-arrow" press="onGoMovimiento" iconBackgroundColor="Accent5"/>
                    </f:header>

                </f:Card> -->
                <VBox alignContent="Center" alignItems="Center">
                    <core:Icon src="sap-icon://navigation-left-arrow" color="blue" class="size2" press=""/>
                    <Label text="{i18n>btnanterior}" />
                </VBox>

                <VBox alignContent="Center" alignItems="Center">
                    <!-- <core:Icon src="sap-icon://navigation-right-arrow" color="blue" class="size2" press=""/> -->
                    <Button text="{i18n>btnleerpallet}" type="Default"/>

                </VBox>

                <VBox alignContent="Center" alignItems="Center">
                    <core:Icon src="sap-icon://navigation-right-arrow" color="blue" class="size2" press=""/>
                    <Label text="{i18n>btnsiguiente}" />

                </VBox>




                <!-- <f:Card  >
                    <f:header>
                        <card:Header iconSrc="sap-icon://navigation-right-arrow" press="onGoMovimiento" iconBackgroundColor="Accent5" />
                    </f:header>
                </f:Card> -->
            </HBox>


        </content>
        <footer>

            <OverflowToolbar class="sapUiSmallMarginBottom">

                <Button text="{i18n>btncancelar}" type="Emphasized" width="30%" press="onCancelPicking" />
                <ToolbarSpacer/>
                <Button text="{i18n>btnlimpiar}" type="Emphasized" width="30%" enabled="{mockdata>/inOTValidate}"/>
                <ToolbarSpacer/>
                <Button text="{i18n>btncontinuar}" type="Emphasized" width="30%" />
            </OverflowToolbar>

        </footer>
    </Page>

</mvc:View>
