<mvc:View controllerName="morixe.zmmreemplazodsi.controller.Traslados"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m">


    <Page title="{i18n>ttmovimiento}" class="Title PanelSnow">
        <customHeader>
            <Bar class="custHeader" design="Header">
                <contentLeft>
                    <Button type="Emphasized" icon="sap-icon://nav-back" press="_onGotoMainMenu"/>
                </contentLeft>
                <contentMiddle>
                    <ObjectIdentifier />
                </contentMiddle>
                <contentRight>
                    <!-- <Button id="idBtnReinit" visible="false" type="Emphasized" icon="sap-icon://refresh" press="onReiniciar"/> -->
                    <Image src="./images/logo.png" height="36px"></Image>
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <OverflowToolbar class="sapUiSmallMarginBottom">
                <ToolbarSpacer/>
                <Label text="{i18n>btntraslados}"/>
                <ToolbarSpacer/>
            </OverflowToolbar>


            <form:SimpleForm columnsM="2" columnsXL="4" editable="true" backgroundDesign="Transparent" class="sapUiTinyMarginTop" visible="true">
                <form:content>

                    <Label text="{i18n>labelpallet}" />
                    <Input id="idMovPalletInput" submit="onPalletScan" />


                </form:content>
            </form:SimpleForm>

            <form:SimpleForm columnsM="2" columnsXL="4" editable="true" backgroundDesign="Transparent" class="sapUiTinyMarginTop" visible="false">
                <form:content>

                    <Label text="{i18n>labelpallet}" />
                    <Input id="idTraPalletMaterial" submit="onPalletScan" />

                    <Label text="{i18n>lblcantidad}" />
                    <Input id="idTraPalletCantidad" submit="onPalletScan" />

                </form:content>
            </form:SimpleForm>



            <form:SimpleForm columnsM="2" columnsXL="4" editable="true" backgroundDesign="Transparent">
                <form:content>

                    <ObjectStatus title="{i18n>lblnumot}" text="{mockdata>/movdata/movOT}" />

                    <ObjectStatus title="{i18n>lbletapa}" text="{i18n>lblingreseot}" />


                    <ObjectStatus title="{i18n>lblorigen}" text="XXXXXXXXXXXXXX" />
                    <Input submit="onInputScanSubmit" value="{mockdata>/Salida/Svalorigen}"/>

                    <ObjectStatus title="{i18n>lbldestino}" text="XXXXXXXXXXXXXXXXX" />
                    <Input submit="onInputScanSubmit" value="{mockdata>/Salida/Svaldestino}"/>


                </form:content>
            </form:SimpleForm>


        </content>
        <footer>

            <OverflowToolbar class="sapUiSmallMarginBottom">

                <Button text="{i18n>btncancelar}" type="Emphasized" width="30%" enabled="{mockdata>/inOTValidate}" visible="{= ${mockdata>/Remanejo} === 1 }"/>

                <ToolbarSpacer/>

                <Button text="{i18n>btnsinetiqueta}" type="Emphasized" width="30%" enabled="{mockdata>/inOTValidate}" visible="{= ${mockdata>/Remanejo} === 1 }"/>
                <ToolbarSpacer/>
                <Button text="{i18n>btncontinuar}" type="Emphasized" press="onAgregarSeleccionButtonPress" width="30%"/>

            </OverflowToolbar>
        </footer>
    </Page>

</mvc:View>