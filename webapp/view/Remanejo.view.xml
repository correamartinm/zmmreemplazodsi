<mvc:View controllerName="morixe.zmmreemplazodsi.controller.Remanejo"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m">


    <Page title="{i18n>ttotsaliente}" id="OtSaliente" class="Title PanelSnow">
        <customHeader>
            <Bar class="custHeader" design="Header">
                <contentLeft>
                    <Button type="Critical" icon="sap-icon://nav-back" press="_onGotoMainMenu"/>
                </contentLeft>
                <contentMiddle>
                    <ObjectIdentifier />
                </contentMiddle>
                <contentRight>

                    <Image src="./images/logo.png" height="36px"></Image>
                </contentRight>
            </Bar>
        </customHeader>
        <content>

            <OverflowToolbar >
                <ToolbarSpacer/>
                <Label text="{i18n>btnremanejopallets}"/>
                <ToolbarSpacer/>
            </OverflowToolbar>


            <VBox visible="{= ${mockdata>/Remanejo} === 1 }">

                <Table id="idMaterialsAdded" items="{mockdata>/MaterialesAdded}" growing="true" sticky="ColumnHeaders,HeaderToolbar" growingThreshold="6"  >
                    <headerToolbar>
                        <OverflowToolbar >


                            <!-- <SearchField width="65%" placeholder="{i18n>lbllote}" search="onSearchMaterial" change="onSearchMaterial"/> -->
                            <ToolbarSpacer/>

                            <Button icon="sap-icon://add" press="onAgregarButtonPress" text="{i18n>btnagregarmaterial}" type="Emphasized"/>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column hAlign="Center">
                            <Text text="{i18n>lblmaterial}" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="{i18n>lbllote}" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="{i18n>lblcantidad}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <Label text="{mockdata>Codigo}" wrapping="true" />
                                <Label text="{mockdata>Descripcion}" wrapping="true" />
                                <Label text="{mockdata>Cantidad}" wrapping="true" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

            </VBox>

            <form:Form editable="true">
                <form:layout>
                    <form:ColumnLayout columnsL="1" columnsXL="1" labelCellsLarge="1"/>
                </form:layout>
                <form:formContainers>

                    <form:FormContainer>
                        <form:formElements>

                            <form:FormElement label="{i18n>lblmaterial}" visible="{= ${mockdata>/Remanejo} === 3 }" class="sapUiTinyMarginTop">
                                <form:fields>
                                    <Input id="idRemanejoMaterial" value="{mockdata>/RemanejoScanMaterial}"  submit="onMaterialRemanejoScan" showValueHelp="true" valueHelpIconSrc="sap-icon://bar-code"/>
                                </form:fields>
                            </form:FormElement>
                            <!-- Fin Elemento -->

                            <form:FormElement visible="{= ${mockdata>/Remanejo} === 3 }">
                                <form:fields>
                                    <Text text="{i18n>ttdescmaterial}" class="cursiva" />
                                </form:fields>
                            </form:FormElement>
                            <!-- Fin Elemento -->





                        </form:formElements>

                    </form:FormContainer>

                    <!-- Fin de do Contenedor -->

                </form:formContainers>
            </form:Form>


            <VBox alignItems="Start" visible="{= ${mockdata>/Remanejo} === 3 }" justifyContent="SpaceBetween">

                <Table id="idMaterialStock" items="{mockdata>/Materiales}" mode="MultiSelect" selectionChange="onTableMaterialesSelectionChange" growing="true" sticky="ColumnHeaders,HeaderToolbar" growingThreshold="100">
                    <headerToolbar>
                        <OverflowToolbar >

                            <!-- <SearchField width="80%" placeholder="{i18n>lbllote}" search="onSearchMaterial" change="onSearchMaterial"/> -->

                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column hAlign="Center">
                            <Text text="{i18n>lbllote}" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="{i18n>lbldisponible}" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="{i18n>lbltomar}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <Label text="{mockdata>Lote}" wrapping="true" />
                            </cells>
                            <cells>
                                <Label text="{mockdata>Disponible}" wrapping="true" />
                            </cells>
                            <cells>
                                <Input valueStateText="{i18n>msgtrascantidad}" liveChange="oncheckcantidad" enabled="false" />

                            </cells>

                        </ColumnListItem>
                    </items>
                </Table>

            </VBox>

        </content>
        <footer >

            <OverflowToolbar class="sapUiSmallMarginBottom">
                <Button type="Critical" width="12%" icon="sap-icon://sys-cancel" enabled="{mockdata>/inOTValidate}" visible="{= ${mockdata>/Remanejo} === 1 }" press="_onGotoMainMenu"/>
                <Button type="Critical" width="12%" icon="sap-icon://sys-cancel" enabled="{mockdata>/inOTValidate}" visible="{= ${mockdata>/Remanejo} === 3 }" press="onCancelarSeleccionButtonPress"/>

                <ToolbarSpacer/>
                <Button text="{i18n>btnagregarseleccion}" type="Emphasized" visible="{= ${mockdata>/Remanejo} === 3 }" enabled="{= ${mockdata>/MaterialesAddedCount} !== '' }" press="onAgregarSeleccionButtonPress" />
                <Button text="{i18n>btncerrarpallet}" type="Emphasized" width="30%" enabled="{= ${mockdata>/MaterialesAddedCount} !== '' }" visible="{= ${mockdata>/Remanejo} === 1 }"/>

            </OverflowToolbar>

        </footer>
    </Page>

</mvc:View>
