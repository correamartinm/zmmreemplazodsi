<mvc:View controllerName="morixe.zmmreemplazodsi.controller.Remanejo"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:form="sap.ui.layout.form"
    xmlns:card="sap.f.cards"
    xmlns:f="sap.f"
    xmlns="sap.m">


    <Page title="{i18n>ttotsaliente}" id="OtSaliente" class="Title PanelSnow">
        <customHeader>
            <Bar class="custHeader" design="Header">
                <contentLeft>
                    <Button type="Emphasized" icon="sap-icon://nav-back" press="_onGotoMainMenu"/>
                </contentLeft>
                <contentMiddle>
                    <ObjectIdentifier />
                </contentMiddle>
                <contentRight>

                    <Image src="./images/logo.png" height="36px"></Image>
                </contentRight>
            </Bar>
        </customHeader>
        <content>

            <OverflowToolbar >
                <ToolbarSpacer/>
                <Label text="{i18n>btnremanejopallets}"/>
                <ToolbarSpacer/>
            </OverflowToolbar>
            <Toolbar >
                <content>
                    <Text text="Mensajes"/>
                    <ToolbarSpacer/>
                    <Button text="1" type="Emphasized"  press="_onShowMsg1" class="sapUiTinyMarginBegin"/>
                    <Button text="2" type="Emphasized"  press="_onShowMsg2" class="sapUiTinyMarginBegin"/>
                    <Button text="3" type="Emphasized"  press="_onShowMsg3" class="sapUiTinyMarginBegin"/>
                    <Button text="4" type="Emphasized"  press="_onShowMsg4" class="sapUiTinyMarginBegin"/>

                  
                </content>
            </Toolbar>

            <VBox visible="{= ${mockdata>/Remanejo} === 1 }">
                <!-- <form:SimpleForm columnsM="2" columnsXL="4" class="sapUiTinyMarginTop" backgroundDesign="Transparent">
                    <form:content>
                        <Label text="{i18n>lblpalletcontenido}" />
                        <Input submit="onInputPalletContenidoSubmit" />


                    </form:content>
                </form:SimpleForm> -->

                <Table id="idMaterialsAdded" items="{mockdata>/Materiales}" growing="true" sticky="ColumnHeaders,HeaderToolbar" growingThreshold="6">
                    <headerToolbar>
                        <OverflowToolbar >


                            <SearchField width="65%" placeholder="{i18n>lbllote}" search="onSearchMaterial" change="onSearchMaterial"/>
                            <ToolbarSpacer/>

                            <Button icon="sap-icon://add" press="onAgregarButtonPress" text="{i18n>btnagregarmaterial}" type="Emphasized"/>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column hAlign="Center">
                            <Text text="{i18n>lblmaterial}" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="{i18n>lbllote}" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="{i18n>lblcantidad}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <Label text="{mockdata>Codigo}" wrapping="true" />
                            </cells>
                            <cells>
                                <Label text="{mockdata>Descripcion}" wrapping="true" />
                            </cells>
                            <cells>
                                <Label text="{mockdata>Cantidad}" wrapping="true" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

            </VBox>

            <form:SimpleForm columnsM="2" columnsXL="4" editable="true" backgroundDesign="Transparent" visible="{= ${mockdata>/Remanejo} === 3 }" class="sapUiTinyMarginTop">
                <form:content>

                    <Label text="{i18n>lblmaterial}" />
                    <Input id="idRemanejoMaterial" submit="onPalletScan" showValueHelp="true" valueHelpIconSrc="sap-icon://bar-code"/>

                    <Text text="{i18n>ttdescmaterial}" class="cursiva" />
                </form:content>
            </form:SimpleForm>

            <VBox alignItems="Start" visible="{= ${mockdata>/Remanejo} === 3 }" justifyContent="SpaceBetween">






                <Table id="idMaterialStock" items="{mockdata>/Materiales}" mode="MultiSelect" selectionChange="onSelectItem" growing="true" sticky="ColumnHeaders,HeaderToolbar" growingThreshold="100">
                    <headerToolbar>
                        <OverflowToolbar >


                            <SearchField width="80%" placeholder="{i18n>lbllote}" search="onSearchMaterial" change="onSearchMaterial"/>

                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column hAlign="Center">
                            <Text text="{i18n>lbllote}" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="{i18n>lbldisponible}" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="{i18n>lbltomar}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <Label text="{mockdata>Lote}" wrapping="true" />
                            </cells>
                            <cells>
                                <Label text="{mockdata>Cantidad}" wrapping="true" />
                            </cells>
                            <cells>
                                <Input valueStateText="{i18n>msgtrascantidad}" liveChange="oncheckcantidad" />

                            </cells>

                        </ColumnListItem>
                    </items>
                </Table>






            </VBox>

        </content>
        <footer >

            <OverflowToolbar class="sapUiSmallMarginBottom">

                <Button text="{i18n>btncancelar}" type="Emphasized" width="30%" enabled="{mockdata>/inOTValidate}" visible="{= ${mockdata>/Remanejo} === 1 }" press="_onGotoMainMenu"/>
                <Button text="{i18n>btncancelar}" type="Emphasized" width="30%" enabled="{mockdata>/inOTValidate}" visible="{= ${mockdata>/Remanejo} === 3 }" press="onCancelarSeleccionButtonPress"/>


                <ToolbarSpacer/>
                <Button text="{i18n>btnagregarseleccion}" type="Emphasized" visible="{= ${mockdata>/Remanejo} === 3 }" press="onAgregarSeleccionButtonPress" />
                <Button text="{i18n>btncerrarpallet}" type="Emphasized" width="30%" enabled="{mockdata>/inOTValidate}" visible="{= ${mockdata>/Remanejo} === 1 }"/>

            </OverflowToolbar>








        </footer>
    </Page>

</mvc:View>
