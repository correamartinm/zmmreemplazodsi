<mvc:View controllerName="morixe.zmmreemplazodsi.controller.Remanejo"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:form="sap.ui.layout.form"
    xmlns:card="sap.f.cards"
    xmlns:f="sap.f"
    xmlns="sap.m">


    <Page title="{i18n>ttotsaliente}" id="OtSaliente" class="Title PanelSnow">
        <customHeader>
            <Bar class="custHeader" design="Header">
                <contentLeft>
                    <Button type="Emphasized" icon="sap-icon://nav-back" press="_onGotoMainMenu"/>
                </contentLeft>
                <contentMiddle>
                    <ObjectIdentifier />
                </contentMiddle>
                <contentRight>

                    <Image src="./images/logo.png" height="36px"></Image>
                </contentRight>
            </Bar>
        </customHeader>
        <content>

            <OverflowToolbar >
                <ToolbarSpacer/>
                <Label text="{i18n>btnremanejopallets}"/>
                <ToolbarSpacer/>
            </OverflowToolbar>

            <VBox >
                <form:SimpleForm columnsM="2" columnsXL="4" class="sapUiTinyMarginTop" backgroundDesign="Transparent">
                    <form:content>
                        <Label text="{i18n>lblpalletcontenido}" />
                        <Input submit="onInputPalletContenidoSubmit" />


                    </form:content>
                </form:SimpleForm>

                    <Table id="idMaterialsAdded" items="{mockdata>/PalletMaterials}" mode="SingleSelectMaster" selectionChange="onSelectItemAddedMaterials"  growing="true" sticky="ColumnHeaders,HeaderToolbar" growingThreshold="6">
                        <headerToolbar>
                            <OverflowToolbar >
                              <ndc:BarcodeScannerButton id="cmp2QRBUTTON" scanSuccess="onScanSuccess" scanFail="onScanError" inputLiveUpdate="onScanLiveupdate" />
                   
                                <SearchField width="80%" placeholder="{i18n>RBcode} - {i18n>materials}" search="onSearchMaterial" change="onSearchMaterial"/>
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns>
                            <Column >
                                <Text text="{i18n>lblmaterial}" />
                            </Column>
                            <Column >
                                <Text text="{i18n>lbllote}" />
                            </Column>
                            <Column >
                                <Text text="{i18n>lblcantidad}" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem vAlign="Middle">
                                <cells>
                                    <Label text="{path: 'mockdata>MATNR', formatter: '.formatter.formatREFNR'}" />
                                </cells>
                                <cells>
                                    <Label text="{mockdata>MATXT}" wrapping="true" />
                                </cells>
                                <cells>
                                    <Label text="{mockdata>MATXT}" wrapping="true" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>

            </VBox>
            <VBox alignItems="Start" justifyContent="SpaceBetween">
                <form:SimpleForm columnsM="2" columnsXL="4" class="sapUiTinyMarginTop" backgroundDesign="Transparent">
                    <form:content>
                        <Label text="{i18n>lblnuevonumero}" />
                        <Input id="idOtOutInput3" submit="onInputOtScanSubmit" />

                    </form:content>
                </form:SimpleForm>




                <Button text="{i18n>btnimprimir}" type="Emphasized" enabled="{mockdata>/inOTValidate}" class="sapUiSmallMarginBegin"/>


            </VBox>

            <VBox alignItems="Start" justifyContent="SpaceBetween">
                <Table id="idMaterialStock" items="{mockdata>/PalletMaterials}" mode="SingleSelectMaster" selectionChange="onSelectItem"  growing="true" sticky="ColumnHeaders,HeaderToolbar" growingThreshold="100">
                    <headerToolbar>
                        <OverflowToolbar >
                          <ndc:BarcodeScannerButton id="cmp2QRBUTTON" scanSuccess="onScanSuccess" scanFail="onScanError" inputLiveUpdate="onScanLiveupdate" />
               
                            <SearchField width="80%" placeholder="{i18n>RBcode} - {i18n>materials}" search="onSearchMaterial" change="onSearchMaterial"/>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column >
                            <Text text="{i18n>lbllote}" />
                        </Column>
                        <Column >
                            <Text text="{i18n>lbldisponible}" />
                        </Column>
                        <Column >
                            <Text text="{i18n>lbltomar}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <Label text="{path: 'mockdata>MATNR', formatter: '.formatter.formatREFNR'}" />
                            </cells>
                            <cells>
                                <Label text="{mockdata>MATXT}" wrapping="true" />
                            </cells>
                            <cells>
                                <Label text="{mockdata>MATXT}" wrapping="true" />
                            </cells>

                        </ColumnListItem>
                    </items>
                </Table>



                <Button text="{i18n>btnimprimir}" type="Emphasized" enabled="{mockdata>/inOTValidate}" class="sapUiSmallMarginBegin"/>


            </VBox>
        </content>
        <footer >

            <OverflowToolbar class="sapUiSmallMarginBottom">

                <Button text="{i18n>btncancelar}" type="Emphasized" width="30%" enabled="{mockdata>/inOTValidate}"/>


                <ToolbarSpacer/>
                <Button text="{i18n>btncontinuar}" type="Emphasized" width="30%" enabled="{mockdata>/inOTValidate}"/>
            </OverflowToolbar>

        </footer>
    </Page>

</mvc:View>
