<mvc:View controllerName=""
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form" displayBlock="true" height="100%" busyIndicatorDelay="0">

    <form:Form editable="true">
        <form:layout>
            <form:ColumnLayout  columnsL="1" columnsXL="1" labelCellsLarge="1"/>
        </form:layout>
        <form:formContainers>

            <form:FormContainer>
                <form:formElements>

                    <form:FormElement label="{i18n>lblmaterial}"  visible="{= ${mockdata>/Remanejo} === 3 }" class="sapUiTinyMarginTop">
                        <form:fields>
                            <Input id="idRemanejoMaterial" submit="onPalletScan" showValueHelp="true" valueHelpIconSrc="sap-icon://bar-code"/>  
                        </form:fields>
                    </form:FormElement>
                    <!-- Fin Elemento -->

                    <form:FormElement   >
                        <form:fields>
                            <Text text="{i18n>ttdescmaterial}" class="cursiva" />
                        </form:fields>
                    </form:FormElement>
                    <!-- Fin Elemento -->





                </form:formElements>

            </form:FormContainer>

            <!-- Fin de do Contenedor -->

        </form:formContainers>
    </form:Form>



</mvc:View>